{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy on Greger",
            "type": "shell",
            "dependsOn": "",
            "command": [
                "ssh mc@gregercraft.serveminecraft.net cd /media/data/GregerCraftWebServer; git fetch; git pull"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ]
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "camera_ip",
            "description": "Select ip of camera",
            "type": "pickString",
            "options": [
                "192.168.0.90"
            ],
            "default": "192.168.0.90"
        }
    ]
}